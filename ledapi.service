[Unit]
Description=Node API server for RGB LED

[Service]
ExecStart=/home/marty/Projects/Node-API-for-Raspberry-Pi-GPIO/server.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/marty/Projects/Node-API-for-Raspberry-Pi-GPIO

[Install]
WantedBy=multi-user.target
